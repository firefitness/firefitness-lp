<script defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

<!-- アニメーション用JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // フェードアップアニメーション
  const fadeElements = document.querySelectorAll('.fade-up');
  
  const checkFade = () => {
    fadeElements.forEach(element => {
      element.classList.add('active');
    });
  };
  
  // 即時実行
  checkFade();
  
  // カテゴリーリストのスタイル調整
  const categoryList = document.querySelectorAll('.cat-list ul li a');
  categoryList.forEach(item => {
    item.style.color = '#555';
    item.style.textDecoration = 'none';
    item.style.padding = '5px 0';
    item.style.display = 'block';
    item.style.transition = 'all 0.2s ease';
    
    item.addEventListener('mouseenter', function() {
      this.style.color = 'var(--accent-color)';
      this.style.paddingLeft = '5px';
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.color = '#555';
      this.style.paddingLeft = '0';
    });
  });
  
  // 検索フォームのスタイル調整
  const searchForm = document.querySelector('.search-form form');
  if (searchForm) {
    const searchInput = searchForm.querySelector('input[type="text"]');
    const searchButton = searchForm.querySelector('input[type="submit"]');
    
    if (searchInput) {
      searchInput.style.width = '100%';
      searchInput.style.padding = '12px 15px';
      searchInput.style.borderRadius = '30px';
      searchInput.style.border = '1px solid #ddd';
      searchInput.style.marginBottom = '10px';
      searchInput.style.fontSize = '1rem';
      searchInput.style.outline = 'none';
      searchInput.style.transition = 'all 0.3s ease';
    }
    
    if (searchButton) {
      searchButton.style.background = 'var(--accent-color)';
      searchButton.style.color = 'white';
      searchButton.style.border = 'none';
      searchButton.style.padding = '10px 20px';
      searchButton.style.borderRadius = '30px';
      searchButton.style.cursor = 'pointer';
      searchButton.style.fontWeight = '600';
      searchButton.style.transition = 'all 0.3s ease';
    }
  }
});
</script>

